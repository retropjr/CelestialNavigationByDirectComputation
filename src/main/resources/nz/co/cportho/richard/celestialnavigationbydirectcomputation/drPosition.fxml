<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.co.cportho.richard.celestialnavigationbydirectcomputation.DRController">
    <headerText>

    </headerText>

    <content>
        <GridPane vgap="10" hgap="10">

            <HBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label prefHeight="28.0" prefWidth="160.0" text=" DR Latitude">
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </Label>
                <HBox>
                    <TextField fx:id="tfLatitude"  prefWidth="120.0" promptText="12 34.5"/>
                    <TextField fx:id="tfLatHemisphere" prefWidth="40.0" promptText="S"/>
                </HBox>

                <Label prefHeight="28.0" prefWidth="160.0" text="DR Longitude">
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </Label>
                <HBox>
                    <TextField fx:id="tfLongitude"  prefWidth="120.0" promptText="012 34.5"/>
                    <TextField fx:id="tfLonHemisphere" prefWidth="40.0" promptText="E"/>
                </HBox>
            </HBox>

        </GridPane>
    </content>
</DialogPane>